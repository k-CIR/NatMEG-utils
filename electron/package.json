{
  "name": "natmeg-bidsifier",
  "version": "1.0.0",
  "description": "NatMEG BIDS Conversion Tool - Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "BIDS",
    "MEG",
    "NatMEG",
    "neuroscience",
    "data-conversion"
  ],
  "author": "NatMEG",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "build": {
    "appId": "se.ki.natmeg.bidsifier",
    "productName": "NatMEG-BIDSifier",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Science"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "../bids_viewer.html",
      "assets/**/*"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
